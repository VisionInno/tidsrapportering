{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist-electron",
    "rootDir": "./electron",
    "declaration": false,
    "sourceMap": true
  },
  "include": ["electron/**/*.ts"],
  "exclude": ["node_modules"]
}
